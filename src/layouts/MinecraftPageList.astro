---
import "../styles/global.css";

import Top from "../components/Top.astro";

const pages = {
    "inventory_dark": "Inventory: Dark Mode",
    "misaki2": "MisakiGothic2forMC",
    "forcegl20": "ForceGL20",
    "craftgr": "CraftGR"
}

const allPages = await Astro.glob("../pages/minecraft/*.astro");
const globPages = {};

allPages.map((page) => {
    var filename = page.file.replace(/^.*[\\\/]/, '');
    var filename = filename.substring(0, filename.lastIndexOf('.')) || filename;
    globPages[filename] = page;
});
---

<html lang="ja">
    <Top />
    <div class="center-text">
        <h2 id="localize-mc-java" class="title localize">Minecraft (Javaç‰ˆ)</h2>
    </div>
    <div class="page-list center-text">
        <h4>
            <ul class="inline-block">
                {Object.keys(pages).map((key) => <li><a href={globPages[key].url}>{pages[key]}</a></li>)}
            </ul>
        </h4>
    </div>
    <hr>
</html>

<style>
    .title {
        font-size: 40px;
        padding-top: 0em;
        padding-bottom: 0em;
    }

    .page-list {
        margin: 1em;
    }

    ul {
        display: inline;
	    list-style-type: none;
	    padding-left: 0;
    }

    li {
        margin: 0;
	    padding-left: 1em;
        padding-right: 1em;
    }

    .inline-block li {
        display: inline-block;
    }
</style>